@model List<HRMS.Application.DTOs.EmployeeDto>
@{
    ViewData["Title"] = "Employees";
}

<div class="app-page-title">
    <div class="page-title-wrapper d-flex justify-content-between align-items-center">
        <h2 class="page-title">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">Add Employee</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover mt-3">
        <thead class="table-light">
            <tr>
                <th>Emp Code</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Basic Salary</th>
                <th>HRA</th>
                <th>Active</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.EmpCode</td>
                    <td>@emp.EmpName</td>
                    <td>@emp.Email</td>
                    <td>@emp.Phone</td>
                    <td>@emp.BasicSalary.ToString("C")</td>
                    <td>@emp.HRA.ToString("C")</td>
                    <td>
                        @if (emp.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@emp.EmployeeId" class="btn btn-sm btn-warning me-1">Edit</a>
                        @* <a asp-action="Delete" asp-route-id="@emp.EmployeeId" class="btn btn-sm btn-danger">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
